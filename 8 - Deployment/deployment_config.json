{
  "version": "1.0",
  "description": "Raspberry Pi Real-Time Drone Detection Configuration",
  
  "audio": {
    "sample_rate": 22050,
    "duration_seconds": 4,
    "channels": 1,
    "input_directory": "./audio_input",
    "file_pattern": "*.wav",
    "delete_after_processing": false
  },
  
  "detection": {
    "scan_interval_seconds": 5,
    "confidence_threshold_default": 0.5,
    "thresholds_file": "./thresholds.json",
    "enabled_models": ["CNN", "RNN", "CRNN", "Attention-CRNN", "new_CNN", "new_RNN", "new_CRNN", "new_Attention-CRNN"],
    "voting_strategy": "majority",
    "min_consecutive_detections": 2,
    "reload_thresholds_every_prediction": true,
    "description": "All 8 models loaded. Thresholds from thresholds.json (modify on-the-fly)."
  },
  
  "models": {
    "directory": "./models",
    "available_models": {
      "CNN": {
        "filename": "cnn_model.keras",
        "architecture": "CNN",
        "description": "Original CNN model",
        "calibrated_key": "CNN"
      },
      "RNN": {
        "filename": "rnn_model.keras",
        "architecture": "RNN",
        "description": "Original RNN model",
        "calibrated_key": "RNN"
      },
      "CRNN": {
        "filename": "crnn_model.keras",
        "architecture": "CRNN",
        "description": "Original CRNN model",
        "calibrated_key": "CRNN"
      },
      "Attention-CRNN": {
        "filename": "attention_crnn_model.keras",
        "architecture": "Attention-CRNN",
        "description": "Original Attention-CRNN model",
        "calibrated_key": "Attention-CRNN"
      },
      "new_CNN": {
        "filename": "new_cnn_model.keras",
        "architecture": "CNN",
        "description": "NEW CNN (trained Jan 10-11, 2026)",
        "calibrated_key": "new_CNN"
      },
      "new_RNN": {
        "filename": "new_rnn_model.keras",
        "architecture": "RNN",
        "description": "NEW RNN (trained Jan 10-11, 2026)",
        "calibrated_key": "new_RNN"
      },
      "new_CRNN": {
        "filename": "new_crnn_model.keras",
        "architecture": "CRNN",
        "description": "NEW CRNN (trained Jan 10-11, 2026)",
        "calibrated_key": "new_CRNN"
      },
      "new_Attention-CRNN": {
        "filename": "new_attention_crnn_model.keras",
        "architecture": "Attention-CRNN",
        "description": "NEW Attention-CRNN (trained Jan 10-11, 2026)",
        "calibrated_key": "new_Attention-CRNN"
      }
    }
  },
  
  "feature_extraction": {
    "mel_spectrogram": {
      "n_mels": 44,
      "n_fft": 2048,
      "hop_length": 512,
      "fmin": 20,
      "fmax": 11025
    },
    "normalization": false,
    "preprocessing": "none",
    "description": "MEL extraction with ref=1.0, NO normalization to preserve SNR differences"
  },
  
  "output": {
    "log_directory": "./logs",
    "log_level": "INFO",
    "save_predictions": true,
    "predictions_file": "./logs/predictions.json",
    "alert_sound": false,
    "console_output": true,
    "timestamp_format": "%Y-%m-%d %H:%M:%S"
  },
  
  "alerts": {
    "enabled": true,
    "methods": ["console", "log"],
    "drone_detected_message": "ðŸš¨ DRONE DETECTED",
    "no_drone_message": "âœ“ No drone detected",
    "include_confidence": true,
    "include_model_breakdown": true
  },
  
  "performance": {
    "use_gpu": false,
    "batch_size": 1,
    "num_threads": 2,
    "memory_limit_mb": 512,
    "optimize_for_raspberry_pi": true
  },
  
  "recording": {
    "enabled": false,
    "device_index": 0,
    "auto_record": false,
    "save_recordings": false,
    "recordings_directory": "./recordings",
    "description": "Set enabled=true to record from microphone instead of file monitoring"
  }
}
