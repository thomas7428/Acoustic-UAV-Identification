{
  "version": "3.0-robustness-test",
  "description": "Small-run test config copied from v3 but with reduced sample counts.",
  "changes_from_v2": [],
  "drone_augmentation": {
    "enabled": true,
    "robustness_features": {},
    "categories": [
      {
        "name": "drone_test",
        "snr_db": -20,
        "proportion": 1.0,
        "num_background_noises": 1,
        "description": "Sanity test drone category",
        "augmentation_params": {"ambient_intensity": 0.5, "noise_injection": 0.05},
        "label": 1
      }
    ]
  },
  "no_drone_augmentation": {
    "enabled": true,
    "categories": [
      {
        "name": "ambient_test",
        "snr_db": 0,
        "proportion": 1.0,
        "num_noise_sources": 1,
        "amplitude_range": [0.6, 0.8],
        "enable_pitch_shift": false,
        "enable_time_stretch": false,
        "description": "Sanity test ambient category",
        "augmentation_params": {"ambient_types": ["wind_light"], "intensity": 0.3},
        "label": 0
      }
    ]
  },
  "training_recommendations": {},
  "validation_strategy": {},
  "audio_parameters": {
    "sample_rate": 22050,
    "target_duration_sec": 4,
    "enable_looping": true,
    "crossfade_duration_sec": 0.1,
    "enable_normalization": true,
    "max_amplitude": 0.95
  },
  "output": {
    "output_dir": "dataset_augmented_test_small",
    "samples_per_category_drone": 2,
    "samples_per_category_no_drone": 2,
    "save_mixing_info": true,
    "info_filename": "augmentation_metadata_test_small.json"
  },
  "source_datasets": {},
  "advanced": {
    "random_seed": 42,
    "enable_random_offset": true,
    "enable_amplitude_variation": true,
    "amplitude_variation_db": 2
  },
  "advanced_augmentations": {
    "enabled": true,
    "doppler_shift": {"enabled": true, "range": [-0.5, 0.5]},
    "intensity_modulation": {"enabled": true, "freq_range": [0.5, 2.0], "depth": 0.3},
    "reverberation": {"enabled": true, "delay_range": [50,200], "decay_range": [0.2,0.4]},
    "time_stretch": {"enabled": true, "rate_range": [0.95,1.05]}
  }
}
