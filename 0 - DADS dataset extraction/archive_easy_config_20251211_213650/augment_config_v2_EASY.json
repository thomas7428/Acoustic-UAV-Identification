{
  "description": "Enhanced configuration for dataset augmentation - supports both drone and no-drone augmentation",
  "version": "2.0",
  
  "drone_augmentation": {
    "enabled": true,
    "categories": [
      {
        "name": "drone_500m",
        "proportion": 0.40,
        "snr_db": -32,
        "num_background_noises": 5,
        "label": 1,
        "description": "Drone à 500m - totalement inaudible, signal complètement noyé"
      },
      {
        "name": "drone_350m",
        "proportion": 0.25,
        "snr_db": -27,
        "num_background_noises": 5,
        "label": 1,
        "description": "Drone à 350m - quasi impossible à détecter à l'oreille humaine"
      },
      {
        "name": "drone_200m",
        "proportion": 0.20,
        "snr_db": -20,
        "num_background_noises": 4,
        "label": 1,
        "description": "Drone à 200m - très difficile avec multiples bruits de fond"
      },
      {
        "name": "drone_100m",
        "proportion": 0.10,
        "snr_db": -10,
        "num_background_noises": 3,
        "label": 1,
        "description": "Drone à 100m - difficile mais détectable avec attention"
      },
      {
        "name": "drone_50m",
        "proportion": 0.05,
        "snr_db": 0,
        "num_background_noises": 2,
        "label": 1,
        "description": "Drone à 50m - audible mais masqué par bruits ambiants"
      }
    ]
  },
  
  "no_drone_augmentation": {
    "enabled": true,
    "categories": [
      {
        "name": "ambient_extreme",
        "proportion": 0.40,
        "num_noise_sources": 5,
        "amplitude_range": [0.7, 1.0],
        "enable_pitch_shift": true,
        "pitch_shift_range": [-3, 3],
        "enable_time_stretch": true,
        "time_stretch_range": [0.85, 1.15],
        "label": 0,
        "description": "Ambiance extrêmement bruyante avec 5 sources superposées"
      },
      {
        "name": "ambient_very_complex",
        "proportion": 0.30,
        "num_noise_sources": 4,
        "amplitude_range": [0.6, 0.95],
        "enable_pitch_shift": true,
        "pitch_shift_range": [-2, 2],
        "enable_time_stretch": true,
        "time_stretch_range": [0.9, 1.1],
        "label": 0,
        "description": "Ambiance très complexe avec 4 sources mélangées"
      },
      {
        "name": "ambient_complex",
        "proportion": 0.20,
        "num_noise_sources": 3,
        "amplitude_range": [0.5, 0.85],
        "enable_pitch_shift": true,
        "pitch_shift_range": [-2, 2],
        "enable_time_stretch": false,
        "label": 0,
        "description": "Ambiance complexe avec 3 sources sonores"
      },
      {
        "name": "ambient_moderate",
        "proportion": 0.10,
        "num_noise_sources": 2,
        "amplitude_range": [0.4, 0.7],
        "enable_pitch_shift": true,
        "pitch_shift_range": [-1, 1],
        "enable_time_stretch": false,
        "label": 0,
        "description": "Ambiance modérée avec 2 sources combinées"
      }
    ]
  },
  
  "audio_parameters": {
    "sample_rate": 22050,
    "target_duration_sec": 10,
    "enable_looping": true,
    "crossfade_duration_sec": 0.1,
    "enable_normalization": true,
    "max_amplitude": 0.95
  },
  
  "output": {
    "output_dir": "dataset_augmented",
    "samples_per_category_drone": 2000,
    "samples_per_category_no_drone": 2000,
    "save_mixing_info": true,
    "info_filename": "augmentation_metadata.json"
  },
  
  "source_datasets": {
    "drone_dir": "dataset_test/1",
    "no_drone_dir": "dataset_test/0"
  },
  
  "advanced": {
    "random_seed": 42,
    "enable_random_offset": true,
    "enable_amplitude_variation": true,
    "amplitude_variation_db": 2
  }
}
