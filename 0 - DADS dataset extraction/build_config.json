{
  "version": "4.0-minimal-test",
  "advanced": { "random_seed": 42, "num_workers": 2 },
  "audio_parameters": { "sample_rate": 22050, "target_duration_sec": 4 },
  
  "class_proportions": { "drone": 0.5, "no_drone": 0.5 },
  "augmentation_scenarios": [
    {
      "name": "ambient_only",
      "proportion": 0.25,
      "description": "ambient only",
      "ambients": [10]
    },
    {
      "name": "single_drone_close_snr",
      "proportion": 0.25,
      "description": "one drone at 5m + ambient, fixed SNR",
      "drones": [5],
      "ambients": [15],
      "snr_db": -10
    },
    {
      "name": "single_drone_close",
      "proportion": 0.25,
      "description": "one drone at 5m + ambient",
      "drones": [5],
      "ambients": [15]
    },
    {
      "name": "multi_drone_hard_snr",
      "proportion": 0.25,
      "description": "two drones at 7m and 20m + two ambients, fixed SNR",
      "drones": [7, 20],
      "ambients": [10, 25],
      "snr_db": -20
    }
    ,
    {
      "name": "reverb_pre_smallroom",
      "proportion": 0.15,
      "description": "apply small-room reverb per-source before mix",
      "drones": [5],
      "ambients": [10],
      "reverb": { "mode": "pre", "type": "synthetic", "rt60_target": 0.4, "wet": 0.5, "dry": 0.5 }
    },
    {
      "name": "reverb_post_hall",
      "proportion": 0.15,
      "description": "apply hall reverb after mix",
      "drones": [5],
      "ambients": [15],
      "reverb": { "mode": "post", "type": "synthetic", "rt60_target": 1.2, "wet": 0.7, "dry": 0.3 }
    }
    ,
    {
      "name": "env_city_drone_flyby",
      "proportion": 0.10,
      "description": "drone flyby in urban environment with doppler + filters + mems sim",
      "drones": [30],
      "ambients": [10, 20],
      "environment": {
        "trajectory": { "start_m": 50, "end_m": 5, "duration_s": 4.0 },
        "appear": { "fade_in_ms": 150, "fade_out_ms": 300 },
        "distance": { "ref_m": 1.0, "alpha": 1.0 },
        "modifiers": [
          { "name": "doppler", "params": { "v_m_s": 15, "dir": 1 } },
          { "name": "filters", "params": { "type": "low", "cutoff": [2000, 4000] } },
          { "name": "pitch", "params": { "semitones": [-1, 1] } },
          { "name": "hardware_wrapper", "params": { "chain": [
            { "name": "mems", "params": { "tilt_db_per_octave": -4.0, "hf_rolloff_hz": 8000, "snr_floor_db": 50.0, "bit_depth": 16, "glitch_rate": 0.0005 } },
            { "name": "hardware_noise", "params": { "noise_type": "pink", "snr_db": 30 } },
            { "name": "adc_artifacts", "params": { "max_jitter_ms": 0.5, "dropout_prob_per_s": 0.001, "dropout_max_ms": 2, "bits": 16 } },
            { "name": "occlusion", "params": { "cutoff_hz": 2000, "attenuation_db": -6, "event_prob": 0.2, "event_ms": 200 } }
          ] } }
        ]
      }
    },
    {
      "name": "env_rural_pass",
      "proportion": 0.05,
      "description": "rural pass with long distance and MEMS mic simulation",
      "drones": [80],
      "ambients": [30],
      "environment": {
        "trajectory": { "start_m": 120, "end_m": 30, "duration_s": 4.0 },
        "appear": { "fade_in_ms": 50, "fade_out_ms": 200 },
        "distance": { "ref_m": 1.0, "alpha": 1.0 },
        "modifiers": [
          { "name": "filters", "params": { "type": "band", "cutoff": [300, 4000] } },
          { "name": "doppler", "params": { "v_m_s": 8, "dir": -1 } },
          { "name": "hardware_wrapper", "params": { "chain": [
            { "name": "mems", "params": { "tilt_db_per_octave": -6.0, "hf_rolloff_hz": 6000, "snr_floor_db": 48.0, "bit_depth": 12, "glitch_rate": 0.0002 } },
            { "name": "hardware_noise", "params": { "noise_type": "white", "snr_db": 35 } },
            { "name": "adc_artifacts", "params": { "max_jitter_ms": 0.3, "dropout_prob_per_s": 0.0005, "dropout_max_ms": 2, "bits": 12 } }
          ] } }
        ]
      }
    }
  ],
  "distance": { "ref_m": 1.0, "alpha": 1.0 },

  "output": {
    "total_samples": 40,
    "split_ratio": [0.7, 0.15, 0.15],
    "info_filename": "augmentation_samples.jsonl"
  }
}
